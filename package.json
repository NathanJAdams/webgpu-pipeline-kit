{
  "name": "webgpu-pipeline-kit",
  "description": "A type-safe declarative way of creating WebGPU pipelines",
  "version": "1.7.4",
  "author": {
    "name": "Nathan Adams",
    "url": "https://github.com/NathanJAdams"
  },
  "license": "MIT",
  "homepage": "https://github.com/NathanJAdams/webgpu-pipeline-kit",
  "repository": {
    "type": "git",
    "url": "https://github.com/NathanJAdams/webgpu-pipeline-kit.git"
  },
  "keywords": [
    "WebGPU",
    "Pipeline"
  ],
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "main": "./dist/prod/index.cjs",
  "module": "./dist/prod/index.js",
  "types": "./dist/prod/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/prod/index.d.ts",
      "import": "./dist/prod/index.js",
      "require": "./dist/prod/index.cjs"
    },
    "./node": {
      "types": "./dist/prod/node.d.ts",
      "import": "./dist/prod/node.js",
      "require": "./dist/prod/node.cjs"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "build:bundle": "tsup --config tsup.config.bundle.ts",
    "build:dev": "tsup --config tsup.config.dev.ts && copyfiles -u 3 ./src/examples/triangles/index.html ./dist/dev/triangles/",
    "build:prod": "tsup --config tsup.config.prod.ts",
    "clean": "rimraf ./dist/",
    "lint": "eslint ./src --fix && madge --circular src/**/*",
    "serve:orbiter": "yarn clean && yarn build:dev && http-server ./dist/dev/orbiter",
    "serve:star": "yarn clean && yarn build:dev && http-server ./dist/dev/star",
    "serve:triangles": "yarn clean && yarn build:dev && http-server ./dist/dev/triangles",
    "test": "vitest --run"
  },
  "dependencies": {
    "@thi.ng/random": "^4.1.23",
    "loglevel": "^1.9.2",
    "ts-fluent-builder": "^1.2.10"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/rimraf": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@webgpu/types": "^0.1.64",
    "copyfiles": "^2.4.1",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "http-server": "^14.1.1",
    "madge": "^8.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "web-naga": "^1.0.1"
  },
  "peerDependencies": {
    "web-naga": "^1.0.1"
  },
  "packageManager": "yarn@4.9.2"
}
