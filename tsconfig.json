{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "ES2020",
    ],
    "moduleResolution": "bundler",
    "module": "esnext",
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "types": [
      "@webgpu/types",
      "node",
    ],
  },
  "exclude": [
    "dist"
  ],
  "include": [
    "src"
  ],
}